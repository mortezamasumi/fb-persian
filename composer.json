{
    "name": "mortezamasumi/fb-persian",
    "description": "Persian utilities",
    "keywords": [
        "mortezamasumi",
        "laravel",
        "fb-persian"
    ],
    "homepage": "https://github.com/mortezamasumi/fb-persian",
    "support": {
        "issues": "https://github.com/mortezamasumi/fb-persian/issues",
        "source": "https://github.com/mortezamasumi/fb-persian"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Morteza Masumi",
            "email": "morteza.masumi@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "ariaieboy/filament-jalali": "^2.0",
        "filament/filament": "^4.0",
        "spatie/laravel-package-tools": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-browser": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "pestphp/pest-plugin-livewire": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "Mortezamasumi\\FbPersian\\": "src/",
            "Mortezamasumi\\FbPersian\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mortezamasumi\\FbPersian\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@php ./vendor/bin/testbench package:discover --ansi",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Mortezamasumi\\FbPersian\\FbPersianServiceProvider"
            ],
            "aliases": {
                "FbPersian": "Mortezamasumi\\FbPersian\\Facades\\FbPersian"
            }
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
